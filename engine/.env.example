# ═══════════════════════════════════════
# Alpha Trading Bot — Environment Variables
# Copy to .env and fill in your values
# ═══════════════════════════════════════

# Binance (required)
BINANCE_API_KEY=
BINANCE_SECRET=

# KuCoin (optional — enables arbitrage)
KUCOIN_API_KEY=
KUCOIN_SECRET=
KUCOIN_PASSPHRASE=

# Delta Exchange India (optional — enables futures)
DELTA_API_KEY=
DELTA_SECRET=
DELTA_TESTNET=true
DELTA_LEVERAGE=5
DELTA_PAIRS=BTC/USDT,ETH/USDT
ENABLE_SHORTING=true

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Trading
TRADING_PAIRS=BTC/USDT,ETH/USDT,SOL/USDT,XRP/USDT,ADA/USDT,DOGE/USDT
STARTING_CAPITAL=10.0
MAX_LOSS_DAILY_PCT=5.0
MAX_POSITION_PCT=30.0
